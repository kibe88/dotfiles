# cask
alias cask='brew cask'

alias hi="clear"

# cleanup ds_store files
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

# Count of non-hidden files in current dir
alias numfiles='echo $(ls | wc -l)'

alias kl='kill -9'

alias mkdir="mkdir -p"

# ls more organized
alias ls='ls --color -GFhla'

# alias hub as git
eval "$(hub alias -s)"

#tmux helpers
alias tmuxkw='tmux kill-window -t'
alias tmuxkp='tmux kill-pane -t'
alias tmuxks='tmux kill-session -t'

alias extract='unarchive'

alias k='k --no-vcs --human'
alias ka='k --all'

# Short for docker-machine
dkm () {
  docker-machine $@
}
# Switch docker pointer to another host (dmenv my_remote_host)
dkmenv () {
  eval "$(docker-machine env $1)"
}
# Short for docker
dk () {
  docker $@
}

dkcrun() {
  docker-compose run $@
}

dkm_is_running () {
  docker-machine status default > /dev/null
}
# Always start by pointing to the local dev instance
#if ! dkm_is_running; then
    #dkm start
#fi
dkmenv default

# Include local aliases that you don't want exposed online
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
