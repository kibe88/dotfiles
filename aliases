# cask
alias cask='brew cask'

alias amsterdam-server="SOLR_URL=http://localhost:8983/ rails s -p 3001"
alias monaco-server="bin/rails s -p 3000"
alias library-server="SOLR_URL=http://localhost:8983/solr/library bin/rails s -p 3002"

alias hi="clear"

# cleanup ds_store files
alias cleanupds="find . -type f -name '*.DS_Store' -ls -delete"

# Count of non-hidden files in current dir
alias numfiles='echo $(ls | wc -l)'

alias kl='kill -9'

alias mkdir="mkdir -p"

# ls more organized
alias ls='ls -GFhla'

# alias hub as git
eval "$(hub alias -s)"

#tmux helpers
alias tmuxkw='tmux kill-window -t'
alias tmuxkp='tmux kill-pane -t'
alias tmuxks='tmux kill-session -t'

alias extract='unarchive'

alias k='k --no-vcs --human'
alias ka='k --all'

# Include local aliases that you don't want exposed online
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
